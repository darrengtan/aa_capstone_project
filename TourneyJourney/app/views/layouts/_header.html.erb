<div class="header">
  <% if logged_in? %>
    <%= current_user.email %>
    <%= button_to "Log Out", session_url, method: :delete %>
  <% else %>
    <%= link_to "Log In", new_session_url %>
    <%= link_to "Sign Up", new_user_url %>
  <% end %>
</div>

<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>
